        <div class="col-md-10">

            <div class="row">
                <div class="panel panel-default bootstrap-admin-no-table-panel">
                    <div class="panel-heading">
                        <div class="text-muted bootstrap-admin-box-title">添加专辑</div>
                    </div>
                    <div class="bootstrap-admin-no-table-panel-content bootstrap-admin-panel-content collapse in">
                        <form class="form-horizontal" action="/admin/album/add" method="post">
                            <fieldset>
                                <legend>添加专辑</legend>
                                <div class="form-group">
                                    <label class="col-lg-2 control-label" for="album_name">专辑名 </label>
                                    <div class="col-lg-10">
                                        <input id="album_name" name="album_name" type="text" class="form-control col-md-6"  autocomplete="off">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-lg-2 control-label" for="album_desc">专辑简介 </label>
                                    <div class="col-lg-10">
                                        <input id="album_desc" name="album_desc" type="text" class="form-control col-md-6" autocomplete="off">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-lg-2 control-label" for="album_id">专辑ID </label>
                                    <div class="col-lg-10">
                                        <input id="album_id" name="album_id" type="text" class="form-control col-md-6" autocomplete="off">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-lg-2 control-label" for="album_num">专辑文件数量 </label>
                                    <div class="col-lg-10">
                                        <input id="album_num" name="album_num" type="text" class="form-control col-md-6" autocomplete="off">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-lg-2 control-label" for="up_img">专辑图片</label>
                                    <div class="col-lg-10">
                                        <input id="up_img" name="up_img" class="form-control uniform_on" type="file" >
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-lg-2 control-label" for="album_content">专辑简介</label>
                                    <div class="col-lg-10">
                                        <textarea id="album_content" class="form-control textarea-wysihtml5" placeholder="Enter text..." style="width: 100%; height: 200px"></textarea>
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-primary">确认添加</button>
                                <button type="reset" class="btn btn-default">重置</button>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>

